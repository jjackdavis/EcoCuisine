---
import { localizePath } from "astro-i18next";
import { Icon } from "astro-icon";

export interface Props {
	posts: Array<any>;
}

const { posts } = Astro.props;
---

<section class="mx-auto max-w-8xl">
	<div class="mx-auto mt-16 grid max-w-4xl auto-rows-fr grid-cols-1 gap-12 sm:mt-24 lg:mx-0 lg:max-w-none lg:grid-cols-4">
		{
			posts.map((blogPostEntry, index) => (
				<article class="relative isolate flex flex-col justify-end overflow-hidden rounded-xl bg-stone-950 px-8 pb-8 pt-16 sm:pt-32 lg:pt-20">
					<img
						src={blogPostEntry.data.image.src}
						alt={blogPostEntry.data.image.alt}
						class="absolute inset-0 -z-10 h-full w-full object-cover"
					/>
					<div class="absolute inset-0 -z-10 bg-gradient-to-t from-gray-900 via-gray-900/40" />
					<div class="absolute inset-0 -z-10 rounded-2xl ring-1 ring-inset ring-gray-900/10" />
					<h3 class="mt-3 text-lg font-semibold leading-6 text-white">
						<span class="absolute inset-0" />
						{blogPostEntry.data.title}{" "}
					</h3>

					<div class="flex flex-wrap items-center gap-y-1 overflow-hidden text-sm leading-6 text-gray-300">{blogPostEntry.data.author}</div>

					<div class="flex flex-wrap items-center gap-y-1 overflow-hidden text-sm leading-6 text-gray-300">
						<div class="mr-1 text-sm leading-6 text-gray-300">Expires: </div>
						<time datetime={blogPostEntry.data.publishDate.toDateString()} class="mr-8">
							{blogPostEntry.data.publishDate.toDateString()}
						</time>
					</div>

					<div class="flex flex-wrap items-center gap-y-1 overflow-hidden text-sm leading-6 text-gray-300">
						<div class="mr-1 text-sm leading-6 text-gray-300">Quantity: </div>
						<div class="-ml-4 flex items-center gap-x-4">
							<svg viewBox="0 0 2 2" class="-ml-0.5 h-0.5 w-0.5 flex-none fill-white/50">
								<circle cx="1" cy="1" r="1" />
							</svg>
							<div class="flex gap-x-2.5">{blogPostEntry.data.category}</div>
						</div>
					</div>
				</article>
			))
		}
	</div>
</section>
